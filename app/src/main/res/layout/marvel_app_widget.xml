<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="@dimen/fivedp"
    android:padding="@dimen/widget_margin"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/onefivezerodp"
        android:layout_height="@dimen/onezerozerodp"
        android:id="@+id/wid_img"
        android:src="@drawable/img"
        android:contentDescription="@string/widgetimg"/>

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/eightdp"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textColor="#0b0909"
        android:textSize="@dimen/oneeightsp"
        android:textStyle="bold|italic" />

</LinearLayout>